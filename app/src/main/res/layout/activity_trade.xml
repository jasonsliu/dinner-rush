<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jason.dinner_rush.TradeActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="164dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/carrot2"
            android:id="@+id/carrotView" />

        <TextView
            android:text="Carrot Count: "
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/carrotCountText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:text="Send Carrot!"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendCarrotView"
            android:onClick="sendCarrot"
            android:layout_marginBottom="14dp"
            android:layout_above="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.77"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageView
            android:layout_width="164dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/carrot"
            android:id="@+id/potatoView"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:text="Potato Count: "
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/PotatoCountView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:text="Send Potato!"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendPotatoView"
            android:onClick="sendPotato"
            android:layout_marginBottom="14dp"
            android:layout_above="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.77"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:layout_width="164dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/onion"
            android:id="@+id/onionView"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:text="Send Onion!"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendOnionView"
            android:onClick="sendOnion"
            android:layout_marginBottom="14dp"
            android:layout_above="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.77"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:text="Onion Count: "
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/OnionCountView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_row="4"
            android:layout_column="0" />

        <ImageView
            android:layout_width="164dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/carrot"
            android:id="@+id/celeryView"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:text="Celery Count: "
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/celeryCountView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:text="Send Celery!"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendCeleryView"
            android:onClick="sendCelery"
            android:layout_marginBottom="14dp"
            android:layout_above="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.77"
            android:layout_row="5"
            android:layout_column="1" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="341dp">

        <Button
            android:text="Go Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginBottom="14dp"
            android:layout_above="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.77"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="goBack" />

    </LinearLayout>

</RelativeLayout>
